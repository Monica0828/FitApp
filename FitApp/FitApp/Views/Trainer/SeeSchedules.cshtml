@model IEnumerable<FitApp.Models.GymClassSchedule>

@{
    ViewBag.Title = "SeeSchedules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SeeSchedules</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Class.Name)
        </td>       
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditSchedule", new { id = item.ScheduleId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ScheduleId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ScheduleId })
        </td>
    </tr>
}

</table>
