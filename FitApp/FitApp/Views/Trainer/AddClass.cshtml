@model FitApp.Models.GymClass

@{
    ViewBag.Title = "AddClass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="notification-wrapper">

</div>

<h2>Add your class:</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Name of the class:</label>
            <div class="col-sm-3">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @id = "className" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Maximum number of clients:</label>
            <div class="col-sm-3">
                @Html.EditorFor(model => model.MaxClients, new { htmlAttributes = new { @class = "form-control", @id = "nrPersons" } })
                @Html.ValidationMessageFor(model => model.MaxClients, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Create" id="submitClass" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

