@model FitApp.Models.GymSubscription

@{
    ViewBag.Title = "AddSubscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add your subscription</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SubscriptionId)

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name of the gym:</label>
            <div class="col-sm-3">
                @Html.EditorFor(model => model.GymName, new { htmlAttributes = new { @class = "form-control", @id = "gymName" } })
                @Html.ValidationMessageFor(model => model.GymName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Valid from:</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.ValidFrom, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ValidFrom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Valid to:</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.ValidTo, new { htmlAttributes = new { @type = "date", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ValidTo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Type of subscription:</label>
            <div class="col-md-3">
                @Html.EnumDropDownListFor(x => x.Type,
              new { @class= "browser-default custom-select mb-4"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}